<Label>
    background_color: (225/255, 218/255, 230/255,1)
    color: '#b263f7'
    font_size: 38


<TextInput>
    multiline:False
    write_tab: False

<Button>
    font_size: 30
	background_normal: ''
	background_color: '#b263f7'
	color: (225/255, 218/255, 230/255,1)
	bold:False

<Rooms>:
    name: "rooms"
    client:client
    room:room
    reservation:reservation
    fname:fname
    price:price
    beds:beds
    smoking:smoking
    result:result
    GridLayout:
        cols:1
        size: root.width, root.height
        padding: 40
        spacing: 20

        canvas.before:
            Color:
                rgba: (225/255, 218/255, 230/255,1)
            Rectangle:
                pos: self.pos
                size: self.size


        Label:
            id:client
            text: "Room Service"
            size_hint:(1, 0.1)
            bold:True

        GridLayout:
            cols:2
            spacing: 15
            Label:
                text: 'Reservation NUM : '

            TextInput:
                id: reservation
                input_type:'number'
                input_filter:'int'



            Label:
                text: 'First Name : '

            TextInput:
                id: fname
                input_type:'text'

            Label:
                text: 'Room Number : '

            TextInput:
                id: room
                input_type:'number'
                input_filter:'int'

            Label:
                text: 'Price : '

            TextInput:
                id: price
                input_type:'number'
                input_filter:'int'

            Label:
                text: 'Beds : '

            TextInput:
                id: beds
                input_type:'text'


            Label:
                text: 'Smoking : '

            TextInput:
                id: smoking
                input_type:'text'

            Button:
			    text: "Insert"
			    on_press: root.insert()
            Button:
			    text: "Select"
			    on_press: root.select()
            Button:
			    text: "Update"
			    on_press: root.update()
            Button:
			    text: "Delete"
			    on_press: root.delete()



        Label:
            id:result
            text:""
            size_hint_y: None
            text_size:self.width, None
            height:self.texture_size[1]
            font_size:15

        GridLayout:
            cols:2
            spacing: 15
            size_hint:(1, 0.1)

            Button:
                text: "Information"
                bold:True
                on_press: root.info()

            Button:
                text: "Redistribution"
                bold:True
                on_press: root.redistribution()
